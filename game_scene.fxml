<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #020617;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUIController">

    <!-- TOP: Scene Image Display -->
    <top>
        <StackPane prefHeight="400.0" style="-fx-background-color: #000000; -fx-border-color: #334155; -fx-border-width: 0 0 1 0;">
            <ImageView fx:id="imageView" fitHeight="400.0" fitWidth="800.0" opacity="0.8" preserveRatio="true">
            <image>
               <Image url="@images/PixelBench.png" />
            </image></ImageView>

            <!-- Room Name Label (Top Right) -->
            <Label fx:id="currentRoomLabel" alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="33.0" prefWidth="112.0" style="-fx-background-color: #020617; -fx-text-fill: #cbd5e1; -fx-border-color: #475569; -fx-border-width: 1; -fx-padding: 8; -fx-background-radius: 0; -fx-border-radius: 0;" text="Bench" textAlignment="CENTER" StackPane.alignment="TOP_RIGHT">
                <font>
                    <Font size="14.0" />
                </font>
                <StackPane.margin>
                    <Insets right="8.0" top="8.0" />
                </StackPane.margin>
            </Label>
        </StackPane>
    </top>

    <!-- CENTER: Main Game Area -->
    <center>
        <BorderPane>
            <!-- LEFT: Character Sidebar -->
            <left>
                <VBox prefWidth="161.0" spacing="8.0" style="-fx-background-color: #020617; -fx-border-color: #334155; -fx-border-width: 0 1 0 0; -fx-padding: 8;">

                    <!-- Character Portrait -->
                    <VBox spacing="4.0" style="-fx-background-color: #0f172a; -fx-border-color: #475569; -fx-border-width: 1; -fx-padding: 12;">
                        <Region prefHeight="80.0" prefWidth="80.0" style="-fx-background-color: #1e293b; -fx-border-color: #64748b; -fx-border-width: 1;">
                            <VBox.margin>
                                <Insets left="20.0" right="20.0" />
                            </VBox.margin>
                        </Region>

                        <!-- Health Hearts -->
                        <HBox alignment="CENTER" spacing="4.0" />
                    </VBox>

                    <!-- Available Exits -->
                    <VBox spacing="2.0">
                        <Label style="-fx-text-fill: #64748b;" text="Exits">
                            <font>
                                <Font size="12.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="4.0" />
                            </VBox.margin>
                        </Label>

                        <Button alignment="CENTER_LEFT" onAction="#goNorth" prefWidth="140.0" style="-fx-background-color: transparent; -fx-text-fill: #94a3b8; -fx-border-width: 0; -fx-padding: 4 12;" text="→ North">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Button>

                        <Button fx:id="southButton" alignment="CENTER_LEFT" onAction="#goSouth" prefWidth="140.0" style="-fx-background-color: transparent; -fx-text-fill: #94a3b8; -fx-border-width: 0; -fx-padding: 4 12;" text="→ South">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Button>

                        <Button fx:id="eastButton" alignment="CENTER_LEFT" onAction="#goEast" prefWidth="140.0" style="-fx-background-color: transparent; -fx-text-fill: #94a3b8; -fx-border-width: 0; -fx-padding: 4 12;" text="→ East">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Button>

                        <Button fx:id="westButton" alignment="CENTER_LEFT" onAction="#goWest" prefWidth="140.0" style="-fx-background-color: transparent; -fx-text-fill: #94a3b8; -fx-border-width: 0; -fx-padding: 4 12;" text="→ West">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Button>
                    </VBox>
                </VBox>
            </left>

            <!-- CENTER: Text Output and Inventory -->
            <center>
                <VBox>
                    <!-- Inventory Bar -->
                    <HBox spacing="4.0" style="-fx-background-color: #0f172a; -fx-border-color: #334155; -fx-border-width: 0 0 1 0; -fx-padding: 6;">
                        <Label style="-fx-text-fill: #cbd5e1;" text="Inventory">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>

                        <!-- Inventory Slots -->
                        <HBox spacing="4.0" HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets left="8.0" />
                            </HBox.margin>

                            <Button fx:id="slot1" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #0f172a; -fx-border-color: #334155; -fx-border-width: 1; -fx-text-fill: #cbd5e1;">
                                <font>
                                    <Font size="10.0" />
                                </font>
                            </Button>

                            <Button fx:id="slot2" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #0f172a; -fx-border-color: #334155; -fx-border-width: 1; -fx-text-fill: #cbd5e1;">
                                <font>
                                    <Font size="10.0" />
                                </font>
                            </Button>

                            <Button fx:id="slot3" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #0f172a; -fx-border-color: #334155; -fx-border-width: 1; -fx-text-fill: #cbd5e1;">
                                <font>
                                    <Font size="10.0" />
                                </font>
                            </Button>

                            <Button fx:id="slot4" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #0f172a; -fx-border-color: #334155; -fx-border-width: 1; -fx-text-fill: #cbd5e1;">
                                <font>
                                    <Font size="10.0" />
                                </font>
                            </Button>

                            <Button fx:id="slot5" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #0f172a; -fx-border-color: #334155; -fx-border-width: 1; -fx-text-fill: #cbd5e1;">
                                <font>
                                    <Font size="10.0" />
                                </font>
                            </Button>

                            <Button fx:id="slot6" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #0f172a; -fx-border-color: #334155; -fx-border-width: 1; -fx-text-fill: #cbd5e1;">
                                <font>
                                    <Font size="10.0" />
                                </font>
                            </Button>
                        </HBox>
                    </HBox>

                    <!-- Text Output Area -->
                    <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background: #020617; -fx-background-color: #020617;" VBox.vgrow="ALWAYS">
                  <content>
                     <AnchorPane prefHeight="200.0" prefWidth="200.0">
                        <children>
                                 <TextArea fx:id="outputArea" centerShape="false" editable="false" prefHeight="174.0" prefWidth="438.0" style="-fx-control-inner-background: #020617; -fx-text-fill: #cbd5e1; -fx-background-color: #020617; -fx-border-width: 0; -fx-font-family: &quot;Courier New&quot;; -fx-padding: 0;" wrapText="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                     <font>
                                         <Font name="Courier New" size="12.0" />
                                     </font>
                                 </TextArea>
                           <TextField fx:id="inputArea" layoutY="173.0" prefHeight="26.0" prefWidth="438.0" style="-fx-background-color: #0f172a; -fx-border-width: 1; -fx-text-fill: #94a3b8;" />
                        </children>
                     </AnchorPane>
                  </content>
                    </ScrollPane>
                </VBox>
            </center>
        </BorderPane>
    </center>

    <!-- BOTTOM: Action Buttons -->
    <bottom>
        <GridPane hgap="4.0" style="-fx-background-color: #0f172a; -fx-border-color: #334155; -fx-border-width: 1 0 0 0; -fx-padding: 6;" vgap="4.0">
            <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" percentWidth="25.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" percentWidth="25.0" prefWidth="100.0" />
                <javafx.scene.layout.ColumnConstraints hgrow="ALWAYS" percentWidth="25.0" />
                <javafx.scene.layout.ColumnConstraints hgrow="ALWAYS" percentWidth="25.0" />
                <javafx.scene.layout.ColumnConstraints hgrow="ALWAYS" percentWidth="25.0" />
                <javafx.scene.layout.ColumnConstraints hgrow="ALWAYS" percentWidth="25.0" />
            </columnConstraints>

            <Button fx:id="lookButton" maxWidth="Infinity" onAction="#search" style="-fx-background-color: #0f766e; -fx-text-fill: #f1f5f9; -fx-border-color: #115e59; -fx-border-width: 1; -fx-padding: 8;" text="Look" GridPane.columnIndex="2">
                <font>
                    <Font size="12.0" />
                </font>
            </Button>

            <Button fx:id="takeButton" maxWidth="Infinity" onAction="#inventory" style="-fx-background-color: #0f766e; -fx-text-fill: #f1f5f9; -fx-border-color: #115e59; -fx-border-width: 1; -fx-padding: 8;" text="Inventory" GridPane.columnIndex="3">
                <font>
                    <Font size="12.0" />
                </font>
            </Button>

            <Button maxWidth="Infinity" onAction="#save" style="-fx-background-color: #0f766e; -fx-text-fill: #f1f5f9; -fx-border-color: #115e59; -fx-border-width: 1; -fx-padding: 8;" text="Save" GridPane.columnIndex="4">
                <font>
                    <Font size="12.0" />
                </font>
            </Button>

            <Button fx:id="dropButton" maxWidth="Infinity" onAction="#load" style="-fx-background-color: #0f766e; -fx-text-fill: #f1f5f9; -fx-border-color: #115e59; -fx-border-width: 1; -fx-padding: 8;" text="Load" GridPane.columnIndex="5">
                <font>
                    <Font size="12.0" />
                </font>
            </Button>
         <Button fx:id="lookButton1" maxWidth="Infinity" onAction="#getRoomInfo" style="-fx-background-color: #0f766e; -fx-text-fill: #f1f5f9; -fx-border-color: #115e59; -fx-border-width: 1; -fx-padding: 8;" text="Room Info" GridPane.columnIndex="1">
            <font>
               <Font size="12.0" />
            </font>
         </Button>
         <Button alignment="CENTER" maxWidth="Infinity" onAction="#readJournal" style="-fx-background-color: #0f766e; -fx-text-fill: #f1f5f9; -fx-border-color: #115e59; -fx-border-width: 1; -fx-padding: 8;" text="Journal" textAlignment="CENTER">
            <font>
               <Font size="12.0" />
            </font>
         </Button>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </bottom>

</BorderPane>
